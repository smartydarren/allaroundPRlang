@model List<LearnIdentityAut.Models.RoleModels.UserRoleViewModel>

@{
    var roleID = ViewBag.RoleID;
}

@if(ViewBag.IsError = true)
{
    <h1>Error while updating Users in Role !</h1>
}

<form method="post">
    <div>
        <div class="card-header text-center" >
            <h2>Add or remove users to this role</h2>
        </div>
        <div class="card-body">
            @for(int i = 0; i < Model.Count; i++)
            @*foreach(var u in Model) do not use a foeach loop as the model binder wond bind with the controller parameter*@
            {
                <div class="form-group">
                    <div class="form-check">
                        <input asp-for=@Model[i].IsSelected class="form-check-input" type="checkbox" />
                        <input type="hidden" asp-for=@Model[i].UserId />
                        <input type="hidden" asp-for=@Model[i].UserName />
                        <label asp-for=@Model[i].IsSelected class="form-check-label">
                            @Model[i].UserName
                        </label>
                    </div>
                </div>
            }
        </div>
        <div class="card-footer text-muted">
            <input type="submit" value="Update" class="btn btn-primary" asp-controller="administration" asp-action="EditUsersInRole"
              asp-route-roleID="@roleID" />
            <a asp-controller="Administration" asp-action="EditUsersInRole" asp-route-roleid=@roleID class="btn btn-primary ">Cancel</a>
            <a asp-controller="Administration" asp-action="ListOfRoles" class="btn btn-warning ">GoToRoles</a>
        </div>
    </div>
</form>
