@model LearnIdentityAut.Models.RoleModels.EditRoleModel

@{
    ViewBag.Title = "Edit Role";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateRole" asp-controller="Administration">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for=RoleName></label>
                <input asp-for=RoleName class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" asp-controller="administration" asp-action="editrole" />
                <a asp-controller=Administration asp-action=listofroles type="button" class="btn btn-info">Back To List</a>
            </div>
        </form>
    </div>
</div>

<br /><br />

<div>
    <div class="card" style="width: 18rem;">
        <div class="card-header">
            List Of users in the Role
        </div>
        @if (Model.Users.Any())
        {
            <ul class="list-group list-group-flush">
            @foreach (var ur in Model.Users)
            {
                <li class="list-group-item">@ur</li>
            }
            </ul>
        }
        else
        {
            <h5 class="card-title">None at the Moment</h5>
        }
    </div>
    <a asp-controller=Administration asp-action="EditUsersInRole" asp-route-roleid=@Model.Id type="button" class="btn btn-info">Add Users</a>
    <a asp-controller=Administration asp-action="" type="button" class="btn btn-info">Remove Users</a>
</div>