@model Master_ProductCreateViewModel

@{
    ViewData["Title"] = "Add-Product";
}

@if(ViewBag.Success == true)
    {
        <h1>Product with ID:@ViewBag.ID  Added successfully</h1>    
    }

<h1 class="text-info">Add Products</h1>
<div class="row">
    <div class="col-md-8">
        <form asp-controller="Product" asp-action="CreateProduct" method="post" role="form">

            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Product" class="col-md-2"></label>
                <div class="col-md-10">
                    <input asp-for="Product" class="form-control" />
                    <span asp-validation-for="Product" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-2">
                    <button type="submit" class="btn btn-success form-control">Add</button>
                </div>
            </div>
        </form>
    </div>
</div>