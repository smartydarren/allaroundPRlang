@{
    ViewData["Title"] = "Product";
}

 

<h2>Product Page</h2>
 
<p>Only authroized users can access this page</p>

@if (User.Identity.IsAuthenticated)
{
    <table class="table table-sm">
        @foreach ( var claim in User.Claims ) {
            <tr>
                <td>@claim.Type</td>
                <td>@claim.Value</td>
            </tr>
        }
    </table>

    <h1>Controller : @ViewBag.Controller</h1>
    <h1>Action     : @ViewBag.Action</h1>
}
