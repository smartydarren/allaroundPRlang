@using IdentityProject.Models.ViewModels.DirectDatabase
@model List<CustomerAndItemsViewModel>

@{
    Layout = null;
    var CustVar = Model.OrderByDescending(c => c.Id);
    ViewData["Title"] = "Customers";
}


<h1 class="text-info">Add Customer</h1>
<div class="row">
    <div class="col-md-8">
        <form asp-controller="DirectDataBase" asp-action="GetCustomerOrder" method="post" role="form">

            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label class="col-md-2">New Cust Name</label>
                <div class="col-md-10">
                    <input type="text" name="CustName" class="form-control" />                    
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-2">
                    <button type="submit" class="btn btn-success form-control">Add</button>
                </div>
            </div>
        </form>
    </div>
</div>


<br /><br />

<table class="table">
    <thead>
        <tr>
            <th>ID</th>            
            <th>CustName</th>
        </tr>
        @foreach (var city in CustVar)
        {
            <tr>                
                <td>@city.Id</td>
                <td>@city.CustomerName</td>                
                <td>
                    @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                </td>
            </tr>
        }
    </thead>
</table>