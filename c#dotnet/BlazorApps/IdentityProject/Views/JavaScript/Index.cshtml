@{
    Layout = null;
}

<div>

    <button id="btn1" style="background-color:powderblue" onmouseout="changeButtonColorOnMouseOut();" 
        onmouseover="changeButtonColorOnMouseOver();">Color Change</button>

</div>

<script type="text/javascript">
function changeButtonColorOnMouseOut() {
    document.getElementById("btn1").style = "background-color:powderblue";
}

function changeButtonColorOnMouseOver() {
    document.getElementById("btn1").style.backgroundColor = "tomato";
}

function Alert() {
    document.getElementById("btn1").onclick(); 
}

</script>