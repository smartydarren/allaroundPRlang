@using IdentityProject.Models.ViewModels.Role
@model Access_RoleCreateViewModel

@{
    ViewData["Title"] = "RoleCreation";
}

@if (ViewBag.Success == true)
{
    <h4>Role Added/Updated successfully</h4>
}

<h1 class="text-info">Create Role</h1>
<div class="row">
    <div class="col-md-8">
        <form asp-controller="Role" asp-action="Create" asp-route-_roleId=@Model.RoleId asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" role="form">
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="RoleId" class="col-md-2"></label>
                <div class="col-md-10">
                    <input readonly asp-for="RoleId" class="form-control" />
                    <span asp-validation-for="RoleId" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="RoleName" class="col-md-2"></label>
                <div class="col-md-10">
                    <input asp-for="RoleName" class="form-control" />
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="col-md-2"></label>
                <div class="col-md-10">
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
         

            <div class="form-group">
                <div class="col-md-2">
                    <button type="submit" class="btn btn-success form-control text-nowrap">Save Changes</button>
                </div>
            </div> 
       </form>  
       </div>
    </div>
  